@model IEnumerable<D_Cars_.Models.Marcas>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_producto)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_producto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/Imagenes/editing.png"width="20" /></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><img src="~/Imagenes/detalles.png"width="20" /></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/Imagenes/delete.png"width="20" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
